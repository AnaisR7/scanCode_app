{% extends 'layout.html.twig' %}

{% block header_title %}
    Fiche produit "{{ name }}"
{% endblock %}

{% block contents %}
<div class="row">
    <div class="col-sm-4">
    <img src="{{ img }}" />
    </div>
    <div class="col-sm-8">
        <h3>{{ name }}</h3>
        <h4>Code barre {{ code_barre }}</h4>
        <hr />
        <p>
            <b>Quantité:</b> {{ quantity }} <br/>
        </p>
        <p>
            <b>Ingrédients: </b>
            <ul>
                {% set ingred = ingredient|split(',') %}
                {% for ing in ingred %}
                    
                    <li> {{ ing|replace({"_" : " "})  }} </li>
                {% endfor %}
            </ul>
        </p>
        <p> 
            <!-- Afficher nb_consult sur fiche produit-->
            <b>Nombre de consultations: {{ pdt.nbconsultation }}</b>
        </p>
    </div>
</div>
{% endblock %}
